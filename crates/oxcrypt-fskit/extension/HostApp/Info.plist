<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

    <key>CFBundleName</key>
    <string>OxVaultFS</string>

    <key>CFBundleDisplayName</key>
    <string>OxVault File System</string>

    <key>CFBundleVersion</key>
    <string>1</string>

    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>

    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>

    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <key>LSMinimumSystemVersion</key>
    <string>26.0</string>

    <key>CFBundleIconFile</key>
    <string></string>

    <key>LSApplicationCategoryType</key>
    <string>public.app-category.utilities</string>

    <key>NSHumanReadableCopyright</key>
    <string>Copyright 2024 Agustin Covarrubias. All rights reserved.</string>

    <key>NSPrincipalClass</key>
    <string>NSApplication</string>

    <!-- Required for hosting system extensions -->
    <key>NSSystemExtensionUsageDescription</key>
    <string>OxVaultFS provides native file system access to Cryptomator vaults.</string>

    <!-- XPC Mach Service declaration for CLI/Desktop communication -->
    <!-- This allows launchd to start the app on-demand when clients connect -->
    <key>MachServices</key>
    <dict>
        <key>com.agucova.oxcrypt.desktop.xpc</key>
        <true/>
    </dict>

    <!-- URL scheme for triggering FSKit mounts -->
    <!-- oxcrypt:///path/to/vault triggers the FSKit extension via FSGenericURLResource -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>OxCrypt Vault</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>oxcrypt</string>
            </array>
            <key>CFBundleTypeRole</key>
            <string>Viewer</string>
        </dict>
    </array>

    <!-- Run as background app (no dock icon) when handling URLs -->
    <key>LSUIElement</key>
    <false/>
</dict>
</plist>
